.btn
  display: inline-flex
  align-items center
  justify-content center
  border: 1px solid #e11b2a
  background: #e11b2a
  padding: 0 38px
  position: relative
  //font-size: 16px
  font-weight: bold
  height: 58px
  cursor: pointer
  border-radius: 29px
  color: #ffffff
  transition all 0.1s ease-in !important

  svg
    display: block
    fill: #fff
    anim()

  &:focus
    outline 0

  &:hover, &--active
    text-decoration: none;
    background: #ffffff
    border-color: #e43641
    color: #2a2a2a
    //background: darken(#e11b2a, 15%)

    svg
      fill: #000

  &--sm
    height: 50px
    padding: 0 27px
    border-radius: 25px

  &--round
    width: 52px
    height: 52px
    padding: 0
    align-items center
    justify-content: center

    &^[0]--sm
      width: 37px
      height: 37px

  &--block
    width: 100%
    padding: 0

  &--inverse
    background: #ffffff
    color: #2a2a2a
    font-size: 16px
    border-color: #e43641

    &:hover
      border: 1px solid #e11b2a
      background: #e11b2a
      color: #ffffff

  &--arrow-prev, &--arrow-next
    svg
      width: 12px
      height: 22px

  &--arrow-prev
    svg
      margin-right: 4px

  &--arrow-next
    svg
      transform: rotate(180deg)
      margin-left: 4px
