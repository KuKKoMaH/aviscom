@import "destyle.css/destyle.css"
@import "baron/baron.css";
@import "baron/skins/styles.css";

@import "stylus/_fonts.styl";
@import "stylus/_vars.styl";
@import "stylus/_mixins.styl";

html
  font-family: 'Roboto', sans-serif;
  color: #2d2d2d
  font-size: 18px
  line-height: 1.65
  font-weight: 300

html, body
  overflow-x: hidden

.lines
  background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAABJMAAAABCAQAAADAmydUAAAAHklEQVR4Ae3BAQ0AAAzDoDqYf7fPfQC1gLeAt4C3AxuqAD3B4Pz6AAAAAElFTkSuQmCC') calc(50% - 1px) 0 repeat-y;

h2
  font-size: 36px
  line-height: 1.35
  text-align: center
  font-weight: 500
  margin-bottom: 64px

  span
    color: #e53641

b
  font-weight: bold

p
  margin-bottom: 1.55em

a
  color: #e21d2b
  &:hover
    color: darken(#e21d2b, 30%)
    text-decoration: underline;

ul
  margin-bottom: 1.55em

  li
    padding-left: 22px
    margin-bottom: 1em
    position relative

    &:before
      content: ''
      width: 7px
      height: 7px
      background: #e43641
      border-radius: 50%
      position absolute
      top: .6em;
      left: 2px;

.c
  padding: 0 10px
  margin-left: auto
  margin-right: auto
  max-width: $container-lg
  width: 100%
  @media (max-width: $breakpoint-lg - 1)
    max-width: $container-md
    padding: 0 20px
  @media (max-width: $breakpoint-md - 1)
    max-width: 100%

.page
  //anim(.2s)
  min-height 100vh
  display: flex
  flex-direction column
  will-change filter

  &.mfp-body-open
    filter: blur(10px)
    overflow: hidden

.lazy
  visibility: hidden
  opacity: 0

  &.lazy--visible
    visibility: visible
    opacity: 1

//transform none

img[data-src],
img[data-srcset]
  //display: block;
  min-height: 1px;

.hidden
  display: none

#sprites
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0

.zoom
  cursor: pointer;

  &:after
    content: ''
    display: block
    position: absolute
    z-index: 1
    anim(.2s)
    left: 50%
    top: 50%
    margin-left: -45px
    margin-top: -45px
    width: 90px
    height: 90px
    background: rgba(#e21d2b, .45) url('data:image/png;base64,') 50% 50% no-repeat;
    border-radius: 50%
    opacity 0

  &:hover:after
    opacity 1


.paroller
  will-change: transform;
  transition: transform 0.1s ease-out !important;
  @media (pointer: coarse)
    transition none !important

