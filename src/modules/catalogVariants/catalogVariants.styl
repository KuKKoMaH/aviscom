.catalogVariants

  &__items
    display: flex;
    flex-wrap wrap
    margin: 0 -15px
    justify-content center
    @media (max-width: $breakpoint-md - 1)
      flex-wrap nowrap
      justify-content flex-start
      margin: 0

  &__item
    display: block;
    padding: 0 15px
    box-shadow none
    margin-bottom: 30px
    min-width 270px
    //max-width 350px
    //flex: 1
    flex-shrink 0
    @media (max-width: $breakpoint-md - 1)
      padding: 0

    .panel
      padding: 4px
      box-shadow none

    &--w12
      width: 50%

    &--w13
      width: 33.3333%
      @media (max-width: $breakpoint-lg - 1)
        width: 50%

  &__img
    margin: -5px

    img
      display: block;
      width: 100%

  &__title
    font-size: 24px
    font-weight: 500
    text-align: center;
    padding: 8px 0
    border-bottom: 1px dashed #d9d9d9

  &__info
    font-weight: 500

    td:first-child
      width: 100%
      padding-left: 15px

    td:last-child
      padding-right: 15px

    td
      border-bottom: 1px dashed #d9d9d9
      padding: 9px 0
      padding-right: 8px

  &__input
    padding: 15px
    border-bottom: 1px dashed #d9d9d9

  .input__input
    max-width 250px
    margin: 0 auto

  &__footer
    text-align: center;
    padding: 25px 0px

    .input__input
      margin-bottom: 20px

  &__price
    display: flex;
    align-items center
    justify-content center
    font-size: 24px
    font-weight: 500
    margin-bottom: 12px

    .rub
      margin-right: 12px

  &__navigation
    display: none;
    @media (max-width: $breakpoint-md - 1)
      display: flex;
      align-items center
      justify-content center
      margin-bottom: 40px

      .btn
        margin: 0 15px