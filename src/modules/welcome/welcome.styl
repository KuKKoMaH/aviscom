.welcome
  background: url(./welcome.jpg) 50% 0 no-repeat;
  //background-size: cover;
  padding: 61px 0
  height: 666px
  @media (max-width: $breakpoint-lg - 1)
    height: auto;
    background: url(./welcomeMobile.jpg) 50% 0 no-repeat;
    text-align center
    padding: 0
    padding-top: 54px

  &__top
    font-size: 36px
    font-weight: bold
    margin-bottom: 9px
    @media (max-width: $breakpoint-md - 1)
      font-size: 30px

  &__title
    display: block
    width: 614px
    height: 88px
    margin-bottom: 34px
    fill: #1d1d1b
    @media (max-width: $breakpoint-lg - 1)
      margin: 0 auto 42px
    @media (max-width: $breakpoint-md - 1)
      max-width 100%

  &__sub
    font-size: 24px
    font-weight: 500
    margin-bottom: 20px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 17px

  &__list
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      justify-content space-between
      margin-bottom: 47px

    li
      position static
      margin-bottom: 18px
      padding-left: 16px
      @media (max-width: $breakpoint-md - 1)
        text-align: left;

      &:before
        display: none

    a
      color: #2d2d2d
      font-weight: bold
      @media (max-width: $breakpoint-md - 1)
        display: block;

      &:before
        content: ''
        position: absolute
        width: 6px
        height: 6px
        background #e21d2b
        border-radius: 50%
        margin-top: 12px
        margin-left: -16px

      &:hover
        text-decoration: none;

        span:after
          width: 100%

        .welcome__dot
          &:before
            width: 38px
            height: 38px

          &:after
            width: 14px
            height: 14px

    span
      display: inline-block
      position: relative;

      &:after
        content: ''
        display: block
        position: absolute
        top: 100%
        left: 0
        width: 0
        height: 3px
        background: #e21d2b
        anim()

    sub
      font-size: 16px
      font-weight: 500
      bottom: 0
      @media (max-width: $breakpoint-md - 1)
        display: block;
        line-height: 1

  &__dot
    position: absolute
    width: 38px
    height: 38px
    left: 50%
    @media (max-width: $breakpoint-lg - 1)
      display: none;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      left: 50%
      top: 50%
      border-radius: 50%
      transform: translate(-50%, -50%)
      anim()

    &:before
      width: 14px
      height: 14px
      background: #e43741

    &:after
      width: 0
      height: 0
      background: #ffffff

    &--1
      margin-left: -187px
      top: 520px

    &--2
      margin-left: 53px;
      top: 629px;

    &--3
      margin-left: 291px;
      top: 635px;

  &__image
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: block;
      margin: 0 auto 50px