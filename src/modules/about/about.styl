.about
  padding: 88px 0 155px
  background-color: #fbfbfb
  @media (max-width: $breakpoint-lg - 1)
    padding: 49px 0 97px

  &__container
    display: flex
    align-items center
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      position: relative;
      padding-bottom: 180px

  &__content
    max-width: 550px
    flex: 1
    position: relative;
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      text-align: center;
      margin: 0 auto
      position: static;

  &__sup
    text-align: left
    margin-bottom: 20px
    margin-left: -3px
    @media (max-width: $breakpoint-lg - 1)
      text-align: center;

  &__title
    width: 426px
    height: 61px
    fill: #e43741
    margin-bottom: 47px
    margin-left: -3px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 19px

  p
    margin-bottom: 32px
    padding-left: 10px

  &__aside
    flex: 1
    min-width: 0
    @media (max-width: $breakpoint-lg - 1)
      width: 100%

  &__slides
    display: flex
    //flex-wrap nowrap
    align-items center
    //justify-content flex-start
    padding-left: 0px
    margin: 0

  &__slide
    flex-shrink 0
    //margin: 0px 16px 106px
    position: relative
    height: (412) px
    display: flex
    align-items: center
    justify-content: flex-end
    transform-origin 20% 50%

    img
      display: block
      position: relative;
      anim(.3s)
      @media (max-width: $breakpoint-lg - 1)
        margin: 0 auto
        max-width 100%

  &__round
    display: block
    position: absolute
    width: 412px
    height: 412px
    background: #e43741
    border-radius: 50%
    top: 0
    right: 0
    anim(.3s)
    @media (max-width: $breakpoint-lg - 1)
      left: 50%
      margin-left: -150px
      right: auto;
    @media (max-width: $breakpoint-lg - 1)
      width: 340px
      height: 340px
      top: 50%
      transform translateY(-50%)

  &__label
    position: absolute
    right: 253px;
    bottom: 44px;
    width: 117px
    height: 117px
    @media (max-width: $breakpoint-lg - 1)
      right: 50%

    &-text
      position: relative;
      background: #ffffff
      width: 100%
      height: 100%
      border-radius: 50%
      display: flex
      align-items: center
      justify-content: center
      text-align: center
      font-weight: 500
      z-index: 1;

    &:before
      content: ''
      width: 325px
      height: 325px
      background: url(img/shadow.png) 50% 50% no-repeat;
      position: absolute
      top: 50%
      left: 50%
      margin-left: -(325 / 2) px;
      margin-top: -(325 / 2) px;
      z-index: -1

  &__link
    position: absolute
    top: 100%;
    margin-top: 20px;
    right: 110px;
    @media (max-width: $breakpoint-lg - 1)
      right: auto
      left: 50%
      transform translateX(-50%)

  &__navigation
    display: flex
    align-items: center
    @media (max-width: $breakpoint-lg - 1)
      position absolute
      bottom: 0
      left: 50%
      transform translateX(-50%)

  &__pagination
    width: 150px
    text-align: center
    font-weight: 500


