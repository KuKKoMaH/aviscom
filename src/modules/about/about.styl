.about
  padding: 88px 0 155px
  background-color: #fbfbfb

  &__container
    display: flex
    align-items center

  &__content
    max-width: 550px
    flex: 1
    position: relative;
    z-index: 1

  &__sup
    text-align: left
    margin-bottom: 20px
    margin-left: -3px

  &__title
    width: 426px
    height: 61px
    fill: #e43741
    margin-bottom: 47px
    margin-left: -3px

  p
    margin-bottom: 32px
    padding-left: 10px

  &__aside
    flex: 1
    min-width: 0

  &__slides
    display: flex
    //flex-wrap nowrap
    align-items center
    //justify-content flex-start
    padding-left: 0px
    margin: 0

  &__slide
    flex-shrink 0
    //margin: 0px 16px 106px
    position: relative
    height: (412) px
    display: flex
    align-items: center
    justify-content: flex-end
    transform-origin 20% 50%

    img
      display: block
      position: relative;
      anim(.3s)

  &__round
    display: block
    position: absolute
    width: 412px
    height: 412px
    background: #e43741
    border-radius: 50%
    top: 0
    right: 0
    anim(.3s)

  &__label
    position: absolute
    right: 253px;
    bottom: 44px;
    width: 117px
    height: 117px

    &-text
      position: relative;
      background: #ffffff
      width: 100%
      height: 100%
      border-radius: 50%
      display: flex
      align-items: center
      justify-content: center
      text-align: center
      font-weight: 500
      z-index: 1;

    &:before
      content: ''
      width: 325px
      height: 325px
      background: url(img/shadow.png) 50% 50% no-repeat;
      position: absolute
      top: 50%
      left: 50%
      margin-left: -(325 / 2) px;
      margin-top: -(325 / 2) px;
      z-index: -1

  &__link
    position: absolute
    top: 100%;
    margin-top: 20px;
    right: 110px;

  &__navigation
    display: flex
    align-items: center

  &__button
    svg
      width: 12px
      height: 22px

    &--prev
      svg
        margin-right: 4px

    &--next
      svg
        transform: rotate(180deg)
        margin-left: 4px

  &__pagination
    width: 150px
    text-align: center
    font-weight: 500


