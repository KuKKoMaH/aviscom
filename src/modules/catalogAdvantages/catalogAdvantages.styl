.catalogAdvantages
  margin-bottom: 44px

  &__items
    display: flex;
    flex-wrap wrap
    @media (max-width: $breakpoint-md - 1)
      flex-wrap nowrap

  &__item
    flex: 1
    text-align: center
    background: #fbfbfb
    height: 250px

    &:nth-child(2n)
      background: #f8f8f8

    &:nth-child(2n + 1)
      background: #ededed

    &--half
      flex: auto
      width: 50%

      &:nth-child(2n + 1)
        background: #f2f2f2

      &:nth-child(2n)
        background: #fbfbfb

    @media (max-width: $breakpoint-md - 1)
      flex: auto
      flex-shrink 0
      &--half
        flex: auto
        flex-shrink 0

  &__img
    height: 155px
    display: flex
    align-items: center
    justify-content: center

  &__text
    font-weight: 500

  &__navigation
    display: none;
    @media (max-width: $breakpoint-md - 1)
      display: flex;
      align-items center
      justify-content center
      margin-top: 40px

      .btn
        margin: 0 15px
