.pagination
  border: 1px solid #f0f0f0;
  background: #ffffff
  padding: 10px
  border-radius: 5px
  display: flex
  align-items center
  justify-content space-around

  &__btn
    flex-shrink 0
    svg
      width: 12px
      height: 22px

    &--prev
      svg
        margin-right: 4px

    &--next
      svg
        transform: rotate(180deg)
        margin-left: 4px

  &__items
    display: flex
    align-items center
    flex-wrap wrap
    justify-content center

  &__item
    display: block
    line-height: 1
    text-align: center
    font-weight: bold
    margin: 0 4px
    padding: 9px 0
    width: 36px
    color: #2a2a2a
    background: #ffffff
    border-radius: 50%
    anim()

    &:hover, &--active
      background: #e43641
      text-decoration: none;
      color: #ffffff
