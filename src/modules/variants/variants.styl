.variants
  background: #fff url(img/variantsBg.jpg) calc(50% + 580px) 50% no-repeat;
  background-size: cover;

  &__container
    padding: 65px 0 80px

  &__items
    padding: 0
    display: flex

  &__item
    background: #fbfbfb
    margin: 0 10px
    border-radius: 4px
    padding: 13px
    display: flex
    flex 1

  &__img
    width: 187px
    flex-shrink: 0
    margin-right: 25px
    margin-top: -(13 + 40)px
    position: relative;

    img
      position: absolute
      top: 0
      left: 50%
      transform translateX(-50%)

  &__text
    padding-top: 27px

    p
      margin-bottom: 20px