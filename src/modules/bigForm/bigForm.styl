  //  position: absolute;

  &__container
    display: flex
    padding: 0
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column

  &__col
    flex: 1
    padding: 0 10px

  &__manager
    display: block
    margin: 0 auto
    @media (max-width: $breakpoint-lg - 1)
      display: none;

  &__header
    background: linear-gradient(to right, #e21d2b, #fc3853)
    color: #ffffff
    font-weight: 500
    text-align: center
    font-size: 24px
    height: 100px
    display: flex
    align-items: center
    justify-content: center
    border: 1px solid #f0f0f0
    border-bottom: 0
    border-radius: 6px 6px 0 0;

  &__body
    border: 1px solid #f0f0f0
    border-bottom: 3px solid #e21d2b;
    border-top: 0
    border-radius: 0 0 6px 6px;

  &__block
    padding: 25px 60px
    border-bottom: 1px solid #f0f0f0

  &__btn
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: block
      text-align: center;

  &__form
    @media (max-width: $breakpoint-lg - 1)
      display: none;
