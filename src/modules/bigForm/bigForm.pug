.bigForm
  .c.bigForm__container
    .bigForm__col
      include ../steps/steps.pug
      img.bigForm__manager(src='modules/bigForm/img/bigFormManager.png')
    .bigForm__col
      .panel
        .panel__header Получите консультацию специалиста в течение 5 минут
        .panel__body
          p.center: b Выберите вариат изделия, который Вам необходим.
          .bigForm__block: .bigForm__type
            label.radio
              input.radio__input(type="radio" name="form-type" value='Забор' checked)
              .radio__label
                .icon.icon--zabor
                | Забор
            label.radio
              input.radio__input(type="radio" name="form-type" value='Ворота')
              .radio__label
                .icon.icon--vorota
                | Ворота
            label.radio
              input.radio__input(type="radio" name="form-type" value='Навес')
              .radio__label
                .icon.icon--naves
                | Навес
          .bigForm__forms.bigForm__block
            .bigForm__form.bigForm__form--active(data-type='Забор')
              p.center: b Выберите вариат изделия, который Вам необходим.
              p.bigForm__row
                input.input__input.input__input--sm(placeholder='Длина забора:')
                input.input__input.input__input--sm(placeholder='Высота забора:')
              .bigForm__variants
                label.radio
                  input.radio__input(type="radio" name="zabor")
                  .radio__label
                    .icon.icon--metal
                    | Металлоштакетник
                label.radio
                  input.radio__input(type="radio" name="zabor")
                  .radio__label
                    .icon.icon--jaluzi
                    | Забор-жалюзи
                label.radio
                  input.radio__input(type="radio" name="zabor")
                  .radio__label
                    .icon.icon--lazer
                    | Премиум забор лазерной резки

            .bigForm__form(data-type='Ворота')
              p.center: b Выберите вариат изделия, который Вам необходим.
              p.bigForm__row
                input.input__input.input__input--sm(placeholder='Длина забора:')
                input.input__input.input__input--sm(placeholder='Высота забора:')
              .bigForm__variants
                label.radio
                  input.radio__input(type="radio" name="zabor")
                  .radio__label
                    .icon.icon--metal
                    | Металлоштакетник
                label.radio
                  input.radio__input(type="radio" name="zabor")
                  .radio__label
                    .icon.icon--jaluzi
                    | Забор-жалюзи
                label.radio
                  input.radio__input(type="radio" name="zabor")
                  .radio__label
                    .icon.icon--lazer
                    | Премиум забор лазерной резки

