.idea
  margin-top: 50px
  margin-bottom: 25px
  &__container
    border: 1px solid #f0f0f0
    border-radius: 5px
    position relative
    background: #ffffff
    box-shadow: 0 10px 25px -10px #e4dede

    &:after
      content: ''
      display: block;
      position: absolute;
      bottom: -4px
      left: 0
      width: 100%
      height: 15px
      background: #e21d2b
      border-radius: 5px
      z-index: -1

  &__img
    position: absolute;
    bottom: 100%
    right: 70px

  &__header
    background: linear-gradient(to right, #e21d2b, #ea3b4e);
    height: 83px
    display flex
    align-items center
    padding-left: 80px;
    color: #ffffff
    font-weight: 500
    font-size: 24px
    border-radius: 5px

  &__body
    padding: 35px 52px 56px

  &__text
    font-weight: 500
    margin-bottom: 30px

  &__form
    display: flex

  &__main
    flex 2
    margin-right: 22px

  &__message
    height: 100%

  &__aside
    flex 1
