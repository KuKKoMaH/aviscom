.related
  margin: 25px 0 40px

  &__items
    display flex
    flex-wrap wrap
    align-items center
    justify-content center
    margin: 0 -14px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0
      flex-wrap nowrap
      justify-content flex-start

  &__item
    width: 33.333%
    //max-width: 400px
    padding: 0 14px
    margin-bottom: 28px
    position: relative;
    flex-shrink 0
    @media (max-width: $breakpoint-lg - 1)
      padding: 0

  &__inner
    display: block
    border-radius 5px
    overflow: hidden;
    position relative
    max-height: 358px

    &:before
      content: ''
      display block
      padding-bottom 100%

    &:after
      content: ''
      display block
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: #222024;
      opacity: .6;

  &__image
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 100%

  &__content
    position: absolute
    z-index: 1
    top: 10px
    right: 10px
    bottom: 10px
    left: 10px
    border: 1px solid #fff
    color: #ffffff
    display: flex
    flex-direction: column
    justify-content: center
    padding: 18px 18px 32px
    @media (max-width: $breakpoint-lg - 1)
      padding-bottom: 110px

  &__title
    font-size: 30px
    margin-bottom: 30px

  &__text
    font-size: 16px
    min-height: 0;
    overflow: hidden;

  &__btn
    position: absolute
    bottom: -19px
    width: 60%
    left: 20%
    //transform: translateX(-50%)
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      bottom: 40px
      left: 45px
      width: auto;

  &__navigation
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      align-items center
      justify-content center

      .btn
        margin: 0 15px
