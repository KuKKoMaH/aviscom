.blogList
  padding: 45px 0 30px

  &__item
    display: flex
    align-items flex-start
    border: 1px solid #f3f3f3
    border-radius: 5px
    padding: 8px 10px 25px
    position relative
    background: #ffffff
    margin-bottom: 44px
    box-shadow: 0 10px 25px -10px #e4dede

    &:after
      content: ''
      display: block;
      position: absolute;
      bottom: -4px
      left: 0
      width: 100%
      height: 15px
      background: #e21d2b
      border-radius: 5px
      z-index: -1

  &__images
    max-width: 470px
    flex: 1 0 100%
    display: flex
    flex-wrap wrap
    margin: -5px 37px -5px -5px

  &__image
    padding: 5px

    img
      border-radius: 5px

  &__content
    color: #3c0d10
    padding-top: 21px
    padding-right: 20px

  &__title
    display block
    font-size: 36px
    margin-bottom: 31px
    line-height: 1

    &:hover
      color: #e53641
      text-decoration: underline

  &__text
    margin-bottom: 12px

    p
      margin-bottom: 36px

      &:last-child
        margin-bottom: 0

  &__more
    text-align: right
    padding-right: 18px
