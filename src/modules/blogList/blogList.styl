.blogList
  padding: 45px 0 30px

  &__item
    display: flex
    align-items flex-start
    border: 1px solid #f3f3f3
    border-radius: 5px
    padding: 8px 10px 25px
    position relative
    background: #ffffff
    margin-bottom: 44px
    box-shadow: 0 10px 25px -10px #e4dede
    @media (max-width: $breakpoint-lg - 1)
      flex-wrap wrap
      padding-top: 30px
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      align-items center
      padding: 17px

    &:after
      content: ''
      display: block;
      position: absolute;
      bottom: -4px
      left: 0
      width: 100%
      height: 15px
      background: #e21d2b
      border-radius: 5px
      z-index: -1

  &__slider
    max-width: 470px
    flex: 1 0 100%
    margin: -5px 37px -5px -5px
    @media (max-width: $breakpoint-lg - 1)
      max-width: 330px
      overflow: hidden;
      margin: 0
    @media (max-width: $breakpoint-md - 1)
      max-width 400px
      position: relative;

  &__images
    display: flex
    flex-wrap wrap
    @media (max-width: $breakpoint-lg - 1)
      flex-wrap nowrap

  &__image
    padding: 5px
    @media (max-width: $breakpoint-lg - 1)
      flex-shrink 0

    img
      border-radius: 5px
      width: 100%

  &__content
    color: #3c0d10
    padding-top: 21px
    padding-right: 20px
    @media (max-width: $breakpoint-lg - 1)
      display: contents

  &__description
    @media (max-width: $breakpoint-lg - 1)
      width: 50%
      padding-left: 25px
    @media (max-width: $breakpoint-md - 1)
      width: 100%
      padding-left: 0

  &__title
    display block
    font-size: 36px
    margin-bottom: 31px
    line-height: 1
    @media (max-width: $breakpoint-lg - 1)
      font-size: 24px
      color: #3c0d10
      font-weight: 500

    &:hover
      color: #e53641
      text-decoration: underline

  &__text
    margin-bottom: 12px

    p
      margin-bottom: 36px

      &:last-child
        margin-bottom: 0

  &__more
    text-align: right
    padding-right: 18px
    @media (max-width: $breakpoint-lg - 1)
      flex-shrink 0
      margin-left: auto;
    @media (max-width: $breakpoint-md - 1)
      margin-left: 0
      margin-top: 20px
      text-align: left;

  &__footer
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      flex-direction row-reverse
      margin-top: 15px
      flex: 1
    @media (max-width: $breakpoint-md - 1)
      flex-direction column-reverse

  &__navigation
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      align-items center
      justify-content center
      margin-top: 20px

      .btn
        margin-left: 15px
        margin-right: 15px

  &__button
    @media (max-width: $breakpoint-md - 1)
      position: absolute;
      top: 50%
      margin-top: -26px

      &--prev
        left: 0

      &--next
        right: 0
