.catalog
  padding: 70px 0
  @media (max-width: $breakpoint-lg - 1)
    padding: 50px 0


  &__title
    font-size: 36px
    line-height: 1.35
    text-align: center;
    font-weight: 500
    padding: 0 0 65px
    @media (max-width: $breakpoint-lg - 1)
      padding-bottom: 45px

  &__container
    display: flex;
    align-items flex-start
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column

  &__aside
    max-width: 270px
    margin-right: 30px
    flex-shrink 0
    @media (max-width: $breakpoint-lg - 1)
      max-width none
      margin-right: 0
      margin-bottom: 40px
      width: 100%

  &__content
    width: 100%