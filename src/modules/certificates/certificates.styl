.certificates
  background: url(img/certificatesBg.jpg) 50% 50% no-repeat
  background-size: cover;
  padding: 70px 0 75px

  &__items
    display flex
    flex-wrap wrap
    justify-content space-between

  &__item
    width: 212px
    height: 276px
    position: relative;
    margin-bottom: 23px
    padding: 20px
    background: url(img/frame.png);

    &:before
      content: ''
      display block
      position absolute
      height: 50%
      left: 20px
      right: 20px
      bottom: 20px
      z-index: 1
      background linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, .5))
