.advantages
  padding: 12px 0 64px

  &__items
    display flex

  &__item
    flex: 1
    text-align: center
    background: #fbfbfb
    padding-top: 12px
    padding-bottom: 64px

    &:nth-child(2n)
      background: #f2f2f2

  &__img
    height: 175px
    display: flex
    align-items: center
    justify-content: center

  &__text
    font-weight: 500