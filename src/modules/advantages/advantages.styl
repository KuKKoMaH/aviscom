.advantages
  padding: 12px 0 64px
  @media (max-width: $breakpoint-lg - 1)
    padding: 45px 0 64px

  &__items
    display flex
    flex-wrap wrap
    @media (max-width: $breakpoint-md - 1)
      flex-wrap nowrap

  &__item
    flex: 1
    text-align: center
    background: #fbfbfb
    padding-top: 12px
    padding-bottom: 64px
    @media (max-width: $breakpoint-lg - 1)
      min-width 33.333%
    @media (max-width: $breakpoint-md - 1)
      flex auto
      flex-shrink 0
      min-width 0
      padding-bottom: 47px

    &:nth-child(2n)
      background: #f2f2f2

  &__img
    height: 175px
    display: flex
    align-items: center
    justify-content: center
    @media (max-width: $breakpoint-md - 1)
      height: 135px

  &__text
    font-weight: 500

  &__navigation
    display: none;
    @media (max-width: $breakpoint-md - 1)
      display: flex;
      align-items center
      justify-content center
      margin-top: 40px

      .btn
        margin: 0 15px
