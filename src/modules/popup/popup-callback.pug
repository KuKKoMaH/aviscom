#callback.popup
  .panel
    .panel__header Укажите контактные данные и удобное время для звонка
    .panel__body
      p.center: b Эксперт АВИСКОМ позвонит вам прямо сейчас или в другое рабочее время
      p: input.input__input.input__input--sm(placeholder='Ваше имя:')
      p: input.input__input.input__input--sm(placeholder='Ваш номер телефона:')
      p.center: b Выберите время для звонка:
      p.popup__buttons
        button.btn.btn--sm.btn--active.popup__now Позвонить сейчас
        button.btn.btn--sm.popup__later Позвонить позже
      p.popup__time: input.input__input.input__input--sm(placeholder='Например 27 марта в 13.00:')
      p.center: button.btn.btn--sm Позвоните мне
