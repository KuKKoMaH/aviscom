.testimonials
  background: url(./img/testimonialsBg.jpg) 50% 50% no-repeat
  background-size: cover;
  position: relative;
  padding: 68px 0 70px
  @media (max-width: $breakpoint-md - 1)
    padding: 55px 0 30px

  &__slides
    display: flex
    align-items flex-start
    padding-left: 0px
    margin: 0

  &__slide
    flex-shrink 0
    position: relative
    display: flex
    align-items: center
    justify-content: flex-end
    transform-origin 20% 50%

  &__inner
    display: flex;
    max-width: 970px;
    margin: 0 auto
    align-items flex-start
    @media (max-width: $breakpoint-lg - 1)
      max-width: none
      flex-direction column
      align-items center
      padding: 0 20px

  &__img
    border: 2px solid #e21d2b
    border-radius: 5px
    padding: 5px
    margin-right: 40px
    @media (max-width: $breakpoint-lg - 1)
      margin-right: 0
      margin-bottom: 25px

    img
      border-radius: 5px

  &__content
    @media (max-width: $breakpoint-lg - 1)
      text-align: center;

  &__title
    font-size: 24px
    font-weight: bold;
    color: #302e30
    margin-bottom: 30px

  &__navigation
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      align-items center
      justify-content center
      margin-top: 40px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 10px

  &__button
    position: absolute;
    top: 260px
    left: 50%
    @media (max-width: $breakpoint-lg - 1)
      position: static;
      margin: 0 15px

    &--prev
      margin-left: -580px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0

    &--next
      margin-left: 530px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0
