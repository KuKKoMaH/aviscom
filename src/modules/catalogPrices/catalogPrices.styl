.catalogPrices
  border: 1px solid #f0f0f0
  border-radius: 5px
  background: #ffffff
  padding: 25px 40px 30px 22px
  position: relative;
  margin-bottom: 30px

  &:before
    content: ''
    display: block;
    position: absolute;
    top: -6px
    bottom: -6px
    left: -1px
    right: -1px
    background: #e33642
    border-radius: 5px
    z-index: -1

  &__row
    display: flex;
    align-items center

  &__main
    flex 2
    margin-right: 30px

    img
      width: 100%

  &__aside
    flex: 1
    text-align: center;

  &__head
    text-align: center;
    font-weight: 500
    margin: 8px 0

  table
    width: 100%
    font-size: 16px
    font-weight: 500

  thead
    background: #fceaec

    td
      border-top: 1px dashed #cfcfd2

  tr
    td:last-child
      text-align: right;

  td
    padding: 6px 15px
    border-bottom: 1px dashed #cfcfd2
