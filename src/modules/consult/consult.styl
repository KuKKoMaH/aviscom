.consult
  padding-bottom: 100px

  &__form
    display: flex;
    padding-left: 31px
    padding-right: 260px
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      padding: 0
      padding-top: 45px

  &__input
    flex: 1

  &__btn
    margin-left: 35px
    flex-shrink 0
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 0
      align-self center
      margin-top: 40px

  &__img
    position: absolute;
    right: 25px;
    bottom: -1px
    pointer-events none
    @media (max-width: $breakpoint-lg - 1)
      display: none;
