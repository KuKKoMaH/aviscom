.menu
  position: relative;

  &:before
    content: ''
    display: block;
    position: absolute;
    top: -6px
    bottom: -9px
    left: 8px
    right: 8px
    border-radius: 5px
    background: #e43641
    z-index: -1
    @media (max-width: $breakpoint-lg - 1)
      display: none;

  &--active &
    &__inner
      opacity: 1
      pointer-events all
      transform translateY(0)

    &__openText
      opacity: 0
      pointer-events none
      transform translateX(-10px)
    &__closeText
      opacity: 1
      pointer-events all
      transform translateX(0)


  &__header
    display: none;
    position: relative;
    z-index: 3
    @media (max-width: $breakpoint-lg - 1)
      display: block;

  &__button
    display: flex
    width: 100%
    align-items center
    background: #fdeef0
    height: 59px
    border-radius: 5px
    padding: 0 65px
    font-weight: 500
    cursor: pointer;

    &:before
      content: ''
      display: block;
      position: absolute;
      top: -1px
      bottom: -1px
      left: 10px
      right: 10px
      border-radius: 5px
      background: #e43641
      z-index: -1

    .hamburger
      margin-left: auto;

  &__openText, &__closeText
    position: absolute
    anim()

  &__closeText
    opacity 0
    pointer-events none
    transform translateX(10px)


  &__inner
    border: 2px solid #e43641
    border-radius: 5px
    background: #ffffff
    overflow: hidden;
    @media (max-width: $breakpoint-lg - 1)
      position: absolute;
      opacity: 0
      pointer-events none
      transform translateY(-20px)
      z-index: 2
      width: 100%
      margin-top: -5px
      padding-top: 15px
      border: 1px solid #fdeef0
      anim()

    ul
      margin: 0

    li
      padding: 0
      margin: 0

      &:before
        display: none;

    a
      display flex
      align-items center
      //height: 47px
      border-bottom: 1px solid #fadddf
      color: #1d1d1b
      position: relative;

      &:before
        content ''
        display: block;
        position: absolute;
        background: #e43641
        border-radius: 50%
        left: 20px;
        transform translateX(-50%)
        top: 21px;

    > ul
      > li
        &:last-child
          > ul > li:last-child > a
            border-bottom: 0

        > a
          position: relative;
          background: #fdeef0
          height: 47px
          font-weight: 500
          padding-left: 32px

          &:before
            width: 7px
            height: 7px

          &:after
            content: ''
            position: absolute;
            right: 28px;
            top: 17px;
            width: 7px
            height: 12px
            background: url('data:image/svg+xml;utf8,%3Csvg%20viewBox%3D%220%200%207%2012%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20stroke%3D%22%23e43641%22%20stroke-linecap%3D%22round%22%20stroke-miterlimit%3D%2210%22%20stroke-width%3D%222%22%3E%3Cpath%20d%3D%22m1.12%2010.89%204.88-4.88%22/%3E%3Cpath%20d%3D%22m1.11%201.07%204.91%204.91%22/%3E%3C/g%3E%3C/svg%3E');

        &.current-menu-ancestor, &.current-menu-item
          > ul
            height: auto;

          > a:after
            transform rotate(90deg)


        > ul
          height: 0
          overflow: hidden;

          > li
            > a
              font-size: 16px
              line-height: 1.5
              padding: 11px 12px 11px 30px
              anim()

              &:hover
                color: #e53641

              &:before
                width: 4px
                height: 4px
